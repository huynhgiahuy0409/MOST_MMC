	<!--  ################ Query Statement Define ######################################### -->   
  	<select id="selectBerthInfo"  parameterType="berthPlanParm" resultMap="berthStructureList">
		SELECT 	AREA			AS AREA,
				BERTH_TP 		AS BERTHTP,
			   	BERTH_CD 		AS BERTHCD,
		       	PST_STA 		AS PSTSTA, 
		       	PST_END 		AS PSTEND, 
		       	LENGTH			AS LENGTH,
		       	1				AS DRAWABLE ,
		       	DISPLACEMENT	AS DISPLACEMENT,
		       	MAX_DRAFT		AS MAX_DRAFT,
		       	BERTH_SIDE		AS BERTH_SIDE,
		       	ROTATE			AS ROTATE,
		       	VSL_PST			AS VSL_PST,
		       	COLOR			AS COLOR,
		       	CFG_LENGTH 		AS CFG_LENGTH,
		       	X				AS X,
		       	Y				AS Y,
		       	(SELECT PARAMETER_VALUE FROM TMT_MOST_PARAMETERS
		       	WHERE PARAMETER_CD = 'CFG_BERTH' AND CATEGORY = 'MT') AS CFG_BERTH
		  FROM 	TMT_BERTH_LOC
		 WHERE 	LOC_CD IN ('BBT') 
		 		AND BERTH_TP IN ('WRF')
		 ORDER BY SEQ ASC
    </select>
    
    <sql id="berthSql">
    	(CASE WHEN ATB IS NOT NULL 
			  THEN ATB
			  WHEN ETB IS NOT NULL
			  THEN ETB
			  ELSE ISNULL(ETA, SYSDATETIME())
		 END)
    </sql>
    <sql id="unBerthSql">
    	(CASE WHEN ATU IS NOT NULL
			  THEN ATU
			  WHEN ETU IS NOT NULL
			  THEN ETU
			  ELSE ISNULL(ETD, SYSDATETIME())
		 END)
    </sql>
	<sql id="berthStatusSql">
		(CASE WHEN (ISNULL((SELECT 'Y' FROM TMT_CONFM_SLP WHERE VSL_CALL_ID = A.VSL_CALL_ID AND SUMIT_DT IS NOT NULL),'N') IN 'N'
			 	    AND A.ATB IS NULL AND A.ATU IS NULL)
			  THEN 'BBN'
			  WHEN (ISNULL((SELECT 'Y' FROM TMT_CONFM_SLP WHERE VSL_CALL_ID = A.VSL_CALL_ID AND SUMIT_DT IS NOT NULL),'N') IN 'Y'
			 	    AND A.ATB IS NULL AND A.ATU IS NULL)
			  THEN 'BBY'
			  WHEN (A.ATB IS NOT NULL AND A.ATU IS NULL)
			  THEN 'ONB'
			  WHEN (A.ATU IS NOT NULL)
			  THEN 'DPV'
		 END)
    </sql>
	 
  	<select id="selectBerthPlan"  parameterType="berthPlanParm" resultMap="berthPlanList">
		SELECT	A.VSL_CALL_ID,
				A.SHIP_CALL_NO          SHIP_CALL_NO,
				A.INB_VOY               INB_VOY,
				A.OUTB_VOY              OUTB_VOY,
				A.BERTH_LOC             BERTH_LOC,
				C.BERTH_TP				BERTH_TP,
				A.SUMMIT_STAT           SUMMIT_STAT,
				A.ETA ETA,
				A.ETD ETD,
				A.ETW ETW,
				A.ETC ETC,
				A.ETB ETB,
				A.ETU ETU,
				A.ATW ATW,
				A.ATC ATC,
				A.ATB ATB,
				A.ATU ATU,
				A.ATD ATD,
				A.ATA ATA,
				A.INB_SERV_LANE         INB_SERV_LANE,
				A.OUTB_SERV_LANE        OUTB_SERV_LANE,
				A.ARRV_SA_ID            ARRV_SA_ID,
				FORMAT(A.PILOT_ONBOARD,'dd/MM/yyyy') PILOT_ON_BOARD,
				FORMAT(A.PILOT_DISEMBARK,'dd/MM/yyyy') PILOT_DISEMBARK,
				ISNULL(A.BERTH_ALONGSIDE, 'P') BERTH_ALONGSIDE,
				ISNULL(A.WHARF_MARK_FROM, 0) WHARF_MARK_FROM,
				ISNULL(A.WHARF_MARK_TO, 0)   WHARF_MARK_TO,
				B.VSL_NM                VSL_NM,
				B.CALL_SIGN             CALL_SIGN,
				B.LOA                   LOA,
				A.BERTH_DIV             BERTH_DIV,
				C.PST_STA               PST_STA,
				C.LENGTH                LENGTH,
				ISNULL(A.BERTH_PLAN_YN,'N')  BERTH_PLAN_YN,
				ISNULL(A.PLAN_RMK, ' ')    PLAN_RMK,
				''						PLAN_TYPE
				,A.BERTH_LABEL, 
	         	CASE A.CG_OP_TP WHEN 'D' THEN 'I' WHEN 'L' THEN 'E' ELSE 'B' END OPE_STAT,
				CASE WHEN A.ATW IS NULL THEN 'NWK'
				ELSE
					CASE 
						WHEN A.ATC IS NULL THEN 'OWK' 
						WHEN A.ATC IS NOT NULL AND A.ATC &gt; SYSDATETIME()  THEN 'OWK'
						ELSE 'NWK' 
					END
				END VSL_STAT
				<if test="berthStatus != null and berthStatus != ''">
					,#{berthStatus} VSL_STAT
				</if>
		FROM (SELECT *
            FROM TMT_VSL_SCH
           	WHERE   ATB IS NOT NULL AND ATU IS NULL
                          AND SYSDATETIME() BETWEEN ATB AND ETD
                 AND SUMMIT_STAT = 'AP'
                 AND BERTH_LOC IN (SELECT BERTH_CD
                                     FROM TMT_BERTH_LOC
                                    WHERE LOC_CD = 'BBT')
        	) A, 
			TMT_VSL_PART B,
			(SELECT BERTH_TP, BERTH_CD, PST_STA, LENGTH 
			FROM TMT_BERTH_LOC
			WHERE BERTH_TP IS NOT NULL
			) C 
		WHERE A.VSL_CD = B.VSL_CD
		  AND A.BERTH_LOC = C.BERTH_CD
		  AND A.BERTH_PLAN_YN = 'Y'
		<if test="vslCallId != null and vslCallId != ''">
			AND A.VSL_CALL_ID = #{vslCallId}
		</if>
		ORDER BY  A.BERTH_LOC ASC
    </select>
	

